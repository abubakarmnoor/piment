<!DOCTYPE html>
<html lang="en">

{{> head}}
{{> css}}
<body>

    <div id="wrapper">

        {{> navbar}}

        {{> sidenav}}

        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header">Finish Product</h3><br>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <div class="row">
                    <a href="/sales-price-calc"  type="button" class="btn btn-outline btn-primary btfp">
                        Sales Price Calculation <i class="fa fa-long-arrow-right"></i>
                    </a>
                    <a href="/price-list"  type="button" class="btn btn-outline btn-primary btfp">
                        Price List <i class="fa fa-long-arrow-right"></i>
                    </a>
                </div>
                <div class="row">&nbsp;</div>
                <div class="row">
                    <a class="editor-create">+ Create new record</a>
                    <table id="dtTbl" class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Product Desc </th>
                            <th>Family </th>
                            <th>H </th>
                            <th>Created Date </th>
                            <th>Receipt Last Update </th>
                            <th>Origin </th>
                            <th>Created By </th>
                            <th>Validated </th>
                            <th>Out </th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
                <div class="row">&nbsp;</div>
                <div class="row">&nbsp;</div>
                <div class="row">&nbsp;</div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    </div>
    <!-- /#wrapper -->
    {{> scripts}}
    
    
    <script type="text/javascript">
        var table;
        $(document).ready(function() {
            
            table = $('#dtTbl').DataTable({
                    {{!-- "dom": 'Bfrtip',
                    "buttons": [
                        'copyHtml5',
                        'excelHtml5',
                        'csvHtml5',
                        'pdfHtml5'
                    ], --}}
                    "ajax": "/data/finish-product.json",
                    "scrollY": "370px",
                    "scrollCollapse": true,
                    "sScrollX": "100%",
                    "sScrollXInner": "110%",
                    "paging": true, 
                    "lengthChange": false,
                    "columns": [
                        {
                            data: "id",
                            className: "dt-center editor-details",
                            orderable: true
                        },
                    { "data": "product_desc" },
                    { "data": "family" },
                    { "data": "h" },
                    { "data": "created_date" },
                    { "data": "receipt_last_updated" },
                    { "data": "origin" },
                    { "data": "created_by" },
                    { "data": "validated" },
                    { "data": "out" },
                    {
                        data: null,
                        className: "dt-center editor-edit",
                        defaultContent: '<i class="fa fa-pencil"/>',
                        orderable: false
                    },
                    {
                        data: null,
                        className: "dt-center editor-delete",
                        defaultContent: '<i class="fa fa-trash"/>',
                        orderable: false
                    },
                    
                ]
            });
        });

        // New record
        $('a.editor-create').on('click', function (e) {
            e.preventDefault();
    
            alert('create')
        } );
    
        // Edit record
        $('#dtTbl').on('click', 'td.editor-edit', function (e) {
            e.preventDefault();

            console.log( table.row( this ).data().id );
        
            alert('edit')
        } );
        
        // Details record
        
 
        
        $('#dtTbl').on('click', 'td.editor-details', function (e) {
            e.preventDefault();
            
            console.log( table.row( this ).data().id );

            alert('details')
            
        } );
    // Delete a record
    $('#dtTbl').on('click', 'td.editor-delete', function (e) {
        e.preventDefault();
 
        console.log( table.row( this ).data().id );

        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire(
                'Deleted!',
                'Your file has been deleted.',
                'success'
                )
            }
        })

    } );
    </script>
    
</body>

</html>
