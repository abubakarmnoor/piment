<div class="modal fade" id="pop-modal-po" tabindex="-1" role="dialog" aria-labelledby="pop-modal-form" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close btnclose" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title">PURCHASE ORDER</h5> 
            </div>
            <div class="modal-body">
                <form id="form_input">
                    <div class="form-group row">
                        <input type="text" class="form-control invisible" style="position:absolute;" required readonly>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4 mb-3">
                            <label>PO Date</label>
                            <input type="date" class="form-control" id="po_date" name="po_date" autocomplete="off" required>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label for="po_supplier">Supplier</label>
                            <select class="form-control selectpicker" id="po_supplier" name="po_supplier" data-live-search="true">
                                <option value="-">-</option>
                                {{!-- {{#each __co}}
                                    <option value={{co_guid}}>{{co_order_id}}</option>
                                {{/each}} --}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4 mb-3">
                            <label>Order Amt</label>
                            <input type="text" class="form-control numeric" name="po_order_amt" value="0" autocomplete="off" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label>DP Amt</label>
                            <input type="text" class="form-control numeric" name="po_dp_amt" value="0" autocomplete="off" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label>To Pay Amt</label>
                            <input type="text" class="form-control numeric" name="po_topay_amt" value="0" autocomplete="off" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label>Delivered Amt</label>
                            <input type="text" class="form-control numeric" name="po_delivered_amt" value="0" autocomplete="off" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label>To Be Delivered Amt</label>
                            <input type="text" class="form-control numeric" name="po_tobe_delivered_amt" value="0" autocomplete="off" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label>Balance Amt</label>
                            <input type="text" class="form-control numeric" name="po_balance_amt" value="0" autocomplete="off" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 mb-3">
                            <label>Info</label>
                            <textarea type="text" class="form-control" name="po_info" placeholder="info" autocomplete="off" rows="3" maxlength="1450" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 mb-3">
                            <label for="po_status">Status</label>
                            <select class="form-control selectpicker" id="po_status" name="po_status" data-live-search="true">
                                <option value="-">-</option>
                                {{!-- {{#each __co}}
                                    <option value={{co_guid}}>{{co_order_id}}</option>
                                {{/each}} --}}
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="po_co_guid">Client Order#</label>
                            <select class="form-control selectpicker" id="po_co_guid" name="po_co_guid" data-live-search="true">
                                <option value="-">-</option>
                                {{!-- {{#each __co}}
                                    <option value={{co_guid}}>{{co_order_id}}</option>
                                {{/each}} --}}
                            </select>
                        </div>
                        
                    </div>
                    <div class="form-group row">
                        <hr/>
                        <div class="col-md-12 mb-3">
                            <div class="col-sm pull-right">
                                <button type="submit" class="btn btn-outline btn-primary"><i class="fa fa-save"></i> Save</button>
                            </div>
                            <div class="col-sm pull-left">
                                <a href="#" id="btncancel" type="button" class="btn btn-outline btn-primary" data-dismiss="modal">
                                    <i class="fa fa-times"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row invisible" style="position: absolute;">
                        <div class="col-md-4 mb-3">
                            <input type="text" class="form-control" id="act" name="act" value="{{act}}" readonly>
                            <input type="text" class="form-control" name="po_guid" value="{{po_guid}}" readonly>
                        </div>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</div>