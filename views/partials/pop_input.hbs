<div class="modal fade" id="pop-modal-form-input" tabindex="-1" role="dialog" aria-labelledby="pop-modal-form" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close btnclose" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h5 class="modal-title">ORDER LIST</h5> 
        </div>
        <div class="modal-body">
            <form id="form_input">
                <div class="form-group row">
                    <input type="text" class="form-control invisible" style="position:absolute;" required readonly>
                </div>
                <div class="form-group row">
                    <div class="col-md-12 mb-3">
                        <label for="co_order_fp_guid">FP</label>
                        <select class="form-control selectpicker" id="co_order_fp_guid" name="co_order_fp_guid" data-live-search="true">
                            {{#each __data_fp}}
                                <option cost="{{fp_sc_cost}}" price="{{fp_sc_business_sale}}" value={{fp_guid}}>{{fp_desc}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4 mb-3">
                        <label>Cost</label>
                        <input type="text" class="form-control numeric" name="co_order_cost" placeholder="Cost" value="0" autocomplete="off" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Price</label>
                        <input type="text" class="form-control numeric" name="co_order_price" placeholder="Price" value="0" autocomplete="off" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Qty</label>
                        <input type="number" class="form-control" name="co_order_qty" placeholder="Qty" value="0" min="0" autocomplete="off" required>
                    </div>
                </div>
                <div class="form-group row">
                    <hr/>
                    <div class="col-md-12 mb-3">
                        <div class="col-sm pull-right">
                            <button type="submit" class="btn btn-outline btn-primary"><i class="fa fa-save"></i> Save</button>
                        </div>
                        {{!-- <div class="col-sm pull-right">
                            <a href="#"  type="button" class="btn btn-outline btn-primary btncancel">
                                <i class="fa fa-times"></i> Cancel
                            </a>
                        </div> --}}
                        <div class="col-sm pull-left">
                            {{!-- <a href="#"  type="button" class="btn btn-outline btn-primary btnclear">
                                <i class="fa fa-times"></i> Clear
                            </a> --}}
                            <a href="#"  type="button" class="btn btn-outline btn-primary btnclose" data-dismiss="modal">
                                <i class="fa fa-times"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
                <div class="form-group row invisible" style="position: absolute;">
                    <div class="col-md-4 mb-3">
                        <input type="text" class="form-control" id="act" name="act" value="{{act}}" readonly>
                        <input type="text" class="form-control" name="co_order_guid" value="{{co_order_guid}}" readonly>
                    </div>
                </div>
            </form>
        </div>
            {{!-- <div class="modal-footer">
                <a href="#"  type="button" class="btn btn-outline btn-primary btnclose" data-dismiss="modal">
                    <i class="fa fa-times"></i> Close
                </a>
            </div> --}}
        </div>
    </div>
</div>